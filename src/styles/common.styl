.github-link
  display: block
  position: fixed
  z-index: 5
  right: 2rem
  top: 1.6rem
  svg
    transition: transform 600ms
    path
      fill: darken($white, 20%)
      transition: fill 600ms

  &:hover svg
    transform: scale(1.3, 1.3) rotate(7deg)
    transition: transform 400ms
    path
      fill: $yellow
      transition: fill 600ms

.footer
  position: fixed
  z-index: -1
  left: 0
  right: 0
  bottom: 0
  width: 33%
  margin: auto
  padding: 1.5rem 0
  text-align: center
  color: #fff

  h4
    font-size: 18px
    font-weight: 300
    margin-bottom: 8px
    color: #ccc

  .raised-link
    display: inline-block
    position: relative
    font-weight: 500
    color: #d9d9d9
    transition: .2s

@media ( max-width: 750px ), ( max-height: 600px )
  .footer
    display: none
